<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.details.TaxiOrderDetailsFragment">

    <ImageView
            android:id="@+id/imageView_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/dummy_vehicle_photo_content_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/avatars"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aa000000">
    </FrameLayout>

    <TextView
            android:id="@+id/textView_start_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textView_end_address"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:textColor="?android:colorBackground"
            android:text="@string/dummy_start_address"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
    />
    <TextView
            android:id="@+id/textView_end_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_margin"
            android:textColor="?android:colorBackground"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textView_ride_date"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="@string/dummy_end_address"
    />
    <TextView
            android:id="@+id/textView_ride_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:colorBackground"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:text="@string/dummy_ride_date"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:id="@+id/textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="?android:colorBackground"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/dummy_price"
    />

    <TextView
            android:id="@+id/textView_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:colorBackground"
            android:layout_marginStart="@dimen/double_margin"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintVertical_bias="0.75"
            android:text="@string/dummy_vehicle_driver_name"
    />

    <TextView
            android:id="@+id/textView_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginBottom="@dimen/double_margin"
            android:textColor="?android:colorBackground"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintTop_toBottomOf="@id/textView_driver_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/dummy_vehicle_model_name"
    />

    <TextView
            android:id="@+id/textView_reg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:colorBackground"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/double_margin"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintStart_toEndOf="@id/textView_model_name"
            app:layout_constraintBottom_toBottomOf="@id/textView_model_name"
            android:text="@string/dummy_vehicle_reg_number"
    />

</androidx.constraintlayout.widget.ConstraintLayout>